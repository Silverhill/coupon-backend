{
  "name": "coupon",
  "version": "1.0.0",
  "description": "",
  "main": "server/server.js",
  "scripts": {
    "start": "npm-run-all --parallel init:server lint:watch",
    "debug": "nodemon --exec babel-node server/server.js --debug",
    "inspect": "nodemon --exec babel-node server/server.js --inspect",
    "init:server": "nodemon --exec babel-node server/server.js",
    "lint": "esw server",
    "lint:watch": "npm run lint -- --watch",
    "test": "cross-env NODE_ENV=test node_modules/.bin/ava --serial",
    "test:watch": "npm test -- --watch",
    "apidoc": "rm -rf apidoc && apidoc -f 'server/routes/.*\\.js$' -i ./server -o apidoc/"
  },
  "apidoc": {
    "title": "COUPON API",
    "version": "1.0.0",
    "url": ""
  },
  "contributors": [
    "Lenin Capa",
    "Darwin Gualotuña",
    "Fabricio Flores",
    "Jhymer Martínez",
    "Miguel Viñán"
  ],
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "composable-middleware": "^0.3.0",
    "cross-env": "^5.1.1",
    "express": "^4.16.2",
    "express-jwt": "^5.3.0",
    "express-session": "^1.15.6",
    "lodash": "^4.17.4",
    "mongoose": "^4.13.7",
    "mongoose-schema-extend": "^0.2.2",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-google-oauth": "^1.0.0",
    "passport-local": "^1.0.0",
    "passport-twitter": "^1.0.4",
    "path": "^0.12.7",
    "pre-commit": "^1.2.2"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^4.13.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-watch": "^3.1.3",
    "mockgoose-fix": "^7.3.6",
    "nodemon": "^1.13.3",
    "npm-run-all": "^4.1.2",
    "supertest": "^3.0.0"
  },
  "ava": {
    "files": [
      "test/**/*.spec.js"
    ],
    "source": [
      "server/**/*.js"
    ],
    "failFast": true,
    "babel": "inherit",
    "require": [
      "babel-register",
      "babel-polyfill"
    ]
  },
  "precommit.silent": true,
  "pre-commit": {
    "run": [
      "lint",
      "test"
    ]
  }
}
